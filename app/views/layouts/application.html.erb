<!DOCTYPE html>
<html>
  <head>
    <title>Devbook</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% if current_user %>
      <script type="text/javascript">
        window.currentUser = <%= (render 'api/users/user.json.jbuilder', user: current_user, handlers: [:jbuilder], formats: [:json]).html_safe %>
      </script>
    <% end %>
    <%= favicon_link_tag %>
    <link href="https://fonts.googleapis.com/css?family=Arvo:700" rel="stylesheet">
    <link rel="stylesheet" href="http://devbook.objects.cdn.dream.io/bootstrap.css" media="screen" title="no title" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="with-top-navbar">
    <%= yield %>
  </body>
</html>
